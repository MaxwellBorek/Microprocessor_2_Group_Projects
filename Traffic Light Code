typedef enum {

  GREEN = 2,
  YELLOW = 3,
  RED = 4,
  BUTTON = 6,
  BUZZER = 7

} COLOR;

void initPins(){
  // Initialize pins as input or output
  pinMode(RED, OUTPUT);
  pinMode(YELLOW, OUTPUT);
  pinMode(GREEN, OUTPUT);
  pinMode(BUZZER, OUTPUT);
  // https://roboticsbackend.com/arduino-input_pullup-pinmode/
  pinMode(BUTTON, INPUT_PULLUP);

  // Set all of the LEDs as low to keep them off for now
  digitalWrite(RED, LOW);
  digitalWrite(YELLOW, LOW);
  digitalWrite(GREEN, LOW);

}

void blinkLED(COLOR color, unsigned int ms){

  unsigned int blinkTimes = ms / 1000;

  for(; blinkTimes > 0; blinkTimes--){
    tone(BUZZER, 100);
    digitalWrite(color, LOW);
    noTone(BUZZER);
    delay(500);

    tone(BUZZER, 100);
    digitalWrite(color, HIGH);
    noTone(BUZZER);
    delay(500);

    digitalWrite(color, LOW);
  }

}

void setup() {
  // put your setup code here, to run once:
  initPins();

  do{
    blinkLED(RED, 1000);
  } while(digitalRead(BUTTON) == HIGH);
}

void loop() {

  //Red on for 24 seconds but flashes for last 3 seconds
  digitalWrite(RED, HIGH);
  delay(21000);
  blinkLED(RED, 3000);
  

  //Green on for 20 seconds but flashes for last 3 seconds
  digitalWrite(GREEN, HIGH);
  delay(17000);
  blinkLED(GREEN, 3000);
  
  //Yellow on for 3 seconds
  blinkLED(YELLOW, 3000);

}
